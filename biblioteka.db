-- Napisz zapytania które:
-- lista ksiazek i przypisanych do niej autorow
SELECT 
    b.book_id,
    b.title AS 'Tytuł książki',
    b.isbn,
    b.publication_year AS 'Rok wydania',
    b.publisher AS 'Wydawca',
    b.genre AS 'Gatunek',
    STRING_AGG(CONCAT(a.first_name, ' ', a.last_name), ', ') AS 'Autorzy'
FROM 
    books b
JOIN 
    authorsBooks ab ON b.book_id = ab.book_id
JOIN 
    authors a ON ab.author_id = a.author_id
GROUP BY 
    b.book_id, b.title, b.isbn, b.publication_year, b.publisher, b.genre
ORDER BY 
    b.title;
--lista ksiazek ktore nigdy nie zostaly wyporzyczone
SELECT 
    b.book_id,
    b.title,
    b.isbn,
    b.publication_year,
    b.publisher,
    b.genre
FROM 
    books b
WHERE 
    NOT EXISTS (
        SELECT 1 
        FROM borrowing br 
        WHERE br.book_id = b.book_id
    )
ORDER BY 
    b.title;
-- lista ksiazek ktore zostaly zarezerwowane(ksiazka, rezerwacja, readers)
SELECT 
    b.book_id,
    b.title AS 'Tytuł książki',
    r.reservation_id,
    r.reservation_date,
    rd.readers_id,
    CONCAT(rd.first_name, ' ', rd.last_name) AS 'Czytelnik',
    rd.phone AS 'Telefon czytelnika'
FROM 
    books b
JOIN 
    reservation r ON b.book_id = r.book_id
JOIN 
    readers rd ON r.readers_id = rd.readers_id
JOIN
    status s ON r.status_id = s.status_id
WHERE
    s.status_name = 'Aktywna' -- lub inny odpowiedni status
ORDER BY 
    r.reservation_date DESC;
